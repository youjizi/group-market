<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yjz.group.infrastructure.persistent.dao.ICrowdTagsDetailDao">

    <resultMap id="dataMap" type="cn.yjz.group.infrastructure.persistent.po.CrowdTagsDetail">
        <id column="id" property="id"/>
        <result column="tag_id" property="tagId"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="addCrowdTagsUserId" parameterType="cn.yjz.group.infrastructure.persistent.po.CrowdTagsDetail">
        insert into crowd_tags_detail(tag_id, user_id, create_time, update_time)
        values (#{tagId}, #{userId}, now(), now())
    </insert>

    <select id="queryCrowdTagsByUserId"  resultType="cn.yjz.group.infrastructure.persistent.po.CrowdTagsDetail">
        select id, tag_id, user_id, create_time, update_time
        from crowd_tags_detail
        where  tag_id = #{tagId}  and  user_id = #{userId}
    </select>

</mapper>
